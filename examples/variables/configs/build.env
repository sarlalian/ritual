# Build Configuration Variables
NODE_VERSION=18
PYTHON_VERSION=3.11
GO_VERSION=1.21

# Build Tools
USE_WEBPACK=true
USE_VITE=false
BUILD_TARGET=production

# Output Settings
OUTPUT_DIR=dist
ASSETS_DIR=static
PUBLIC_PATH=/

# Optimization
ENABLE_MINIFICATION=true
ENABLE_COMPRESSION=true
TREE_SHAKING=true

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Performance
MAX_BUNDLE_SIZE=5000000
ANALYZE_BUNDLE=false
PROFILE_BUILD=false